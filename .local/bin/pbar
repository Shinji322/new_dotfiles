#!/usr/bin/env bash

killpbar() {
  killall -q polybar
  while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done
}

startpbar() {
  if type "xrandr"; then
    for m in $(polybar --list-monitors | cut -d":" -f1); do
      MONITOR=$m polybar --reload main &
    done
  else
    polybar --reload main &
  fi
}

main() {
  killpbar
  startpbar &
}

main &
