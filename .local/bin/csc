***REMOVED***!/bin/sh

***REMOVED*** Search contents of all files for argument 
function catsearch {
    ***REMOVED*** check if running zsh
    if [[ -n "$ZSH_VERSION" ]]; then
        ***REMOVED*** prefer ripgrep
        ***REMOVED*** if ripgrep is found, use that, otherwise use grep
        [[ $(builtin whence rg) ]] && rg -i $1 * ||  grep -iR $1 * 
    else ***REMOVED*** bash
        [[ $(builtin type -P rg) ]] && rg -i $1 * ||  grep -iR $1 * 
    fi
}

catsearch "$@"
