***REMOVED***!/bin/sh

DOWNLOADER="yt-dlp"
COOKIES="~/.local/share/cookies/youtube/cookies.txt"

function yt_notif {
    dunstify -u low -i 'youtube-dl' -a 'youtube-dl-notification' $1 $2
}

***REMOVED*** [ -z "$COOKIES" ] && echo "You need to set your cookies path in '$XDG_CONFIG_HOME/script/ytdl_scripts"
***REMOVED*** [ -z "$(whence $DOWNLOADER)" ] && echo "You need to set your youtube-dl command in '$XDG_CONFIG_HOME/script/ytdl_scripts'"
