***REMOVED*** Start bold
export LESS_TERMCAP_md=$(tput bold; tput setaf 2) ***REMOVED*** green
***REMOVED*** Start stand out
export LESS_TERMCAP_so=$(tput bold; tput rev; tput setaf 3) ***REMOVED*** yellow
***REMOVED*** End stand out
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)
***REMOVED*** Start underline
export LESS_TERMCAP_us=$(tput smul; tput bold; tput setaf 1) ***REMOVED*** red
***REMOVED*** End underline
export LESS_TERMCAP_ue=$(tput rmul; tput bold; tput sgr0)
***REMOVED*** End bold, blinking, standout, underline
