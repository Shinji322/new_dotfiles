super + F7
    playerctl --player=mpd play-pause
super + F6
    playerctl --player=mpd previous
super + F8
    playerctl --player=mpd next
super + F5
    playerctl --player=mpd stop 
super + F9
    playerctl --player=mpd volume 0.05- && notify-send "MPD Volume -0.05"
super + F10
    playerctl --player=mpd volume 0.05+ && notify-send "MPD Volume +0.05"

super + shift + F9
    amixer sset Master 5%- && notify-send "Volume -5%"
super + shift + F10
    amixer sset Master 5%+ && notify-send "Volume +5%"


